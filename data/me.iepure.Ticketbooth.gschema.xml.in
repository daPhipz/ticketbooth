<schemalist gettext-domain="ticketbooth">
	<schema id="@app_id@" path="@prefix@/">

		<!-- Window state -->
		<key name="win-width" type="i">
			<default>1024</default>
			<summary>Window width</summary>
		</key>
		<key name="win-height" type="i">
			<default>600</default>
			<summary>Window height</summary>
		</key>
		<key name="win-maximized" type="b">
			<default>false</default>
			<summary>Window maximized</summary>
		</key>
		<key name="win-tab" type="s">
			<choices>
				<choice value="movies" />
				<choice value="series" />
			</choices>
			<default>"movies"</default>
			<summary>Active tab</summary>
			<description>
				Allowed values: "movies", "series"
			</description>
		</key>
		<key name="first-run" type="b">
			<default>true</default>
			<summary>Specifies if the app is run for the first time</summary>
		</key>

		<!-- View style/sorting -->
		<key name="view-style" type="s">
			<choices>
				<choice value="grid" />
				<choice value="list" />
			</choices>
			<default>"grid"</default>
			<summary>View display style</summary>
			<description>
				Determine how movies/tv-series are displayed in the main view, either as a list or a
				grid.
				Allowed values: "grid", "list"
			</description>
		</key>
		<key name="view-sorting" type="s">
			<choices>
				<choice value="az" />
				<choice value="za" />
				<choice value="added-date" />
				<choice value="released-date" />
			</choices>
			<default>"added-date"</default>
			<summary>View sorting style</summary>
			<description>
				Determine how movies/tv-series are sorted in the view.
				Allowed values: "az", "za", "added-date", "released-date"
			</description>
		</key>

		<!-- Settings -->
		<key name="style-scheme" type="s">
			<choices>
				<choice value="auto" />
				<choice value="light" />
				<choice value="dark" />
			</choices>
			<default>"auto"</default>
			<summary>App color scheme</summary>
			<description>
				The color scheme the app should follow.
				Allowed values: "auto", "light", "dark"
			</description>
		</key>
		<key name="tmdb-lang" type="s">
			<default>"en"</default>
			<summary>Language used by TMDB results</summary>
			<description>
				iso_639_1 format.
			</description>
		</key>
		<key name="offline-mode" type="b">
			<default>false</default>
		</key>

	</schema>
</schemalist>
